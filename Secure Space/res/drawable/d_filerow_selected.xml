<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android"
	>
	<item
		android:state_pressed="true"
		>
		<shape>
			<gradient
				android:startColor="#4400AA00"
				android:centerColor="#8800AA00"
				android:endColor="#4400AA00"
				android:angle="90"
				/>
		</shape>
	</item>
	<item
		android:state_focused="true"
		>
		<shape>
			<gradient
				android:startColor="#4400AA00"
				android:centerColor="#8800AA00"
				android:endColor="#4400AA00"
				android:angle="90"
				/>
		</shape>
	</item>
		<item
		android:state_selected="true"
		>
		<shape>
			<gradient
				android:startColor="#4400AA00"
				android:centerColor="#8800AA00"
				android:endColor="#4400AA00"
				android:angle="90"
				/>
		</shape>
	</item>
	<item>
		<shape>
			<gradient
				android:startColor="#002c00"
				android:centerColor="#005900"
				android:endColor="#002c00"
				android:angle="90"
				/>
		</shape>
	</item>
</selector>
