<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android"
	>
	<item
		android:state_pressed="true"
		>
		<shape>
			<gradient
				android:startColor="#FF6666"
				android:endColor="#DD6666"
				android:angle="90"
				/>
			<stroke
				android:width="1dp"
				android:color="#FF777777"
				/>
			<corners
				android:radius="4dp"
				/>
		</shape>
	</item>
	<item
		android:state_focused="true"
		>
		<shape>
			<gradient
				android:startColor="#FF0000"
				android:endColor="#AA2222"
				android:angle="270"
				/>
			<stroke
				android:width="2dp"
				android:color="#ffffb10b"
				/>
			<corners
				android:radius="4dp"
				/>
		</shape>
	</item>
	<item>
		<shape>
			<gradient
				android:startColor="#FF0000"
				android:endColor="#AA2222"
				android:angle="270"
				/>
			<stroke
				android:width="1dp"
				android:color="#FF777777"
				/>
			<corners
				android:radius="4dp"
				/>
			<padding
				android:left="8dp"
				android:top="8dp"
				android:right="8dp"
				android:bottom="8dp"
				/>
		</shape>
	</item>
</selector>
