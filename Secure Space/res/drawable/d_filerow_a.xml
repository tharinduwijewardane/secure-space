<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android"
	>
	<item
		android:state_pressed="true"
		>
		<shape>
			<gradient
				android:startColor="#44888888"
				android:centerColor="#88EEEEEE"
				android:endColor="#44888888"
				android:angle="90"
				/>
		</shape>
	</item>
	<item
		android:state_focused="true"
		>
		<shape>
			<gradient
				android:startColor="#44888888"
				android:centerColor="#88EEEEEE"
				android:endColor="#44888888"
				android:angle="90"
				/>
		</shape>
	</item>
	<item
		android:state_selected="true"
		>
		<shape>
			<gradient
				android:startColor="#44888888"
				android:centerColor="#88EEEEEE"
				android:endColor="#44888888"
				android:angle="90"
				/>
		</shape>
	</item>
	<item>
		<shape>
			<gradient
				android:startColor="#222222"
				android:centerColor="#4A4A4A"
				android:endColor="#222222"
				android:angle="90"
				/>
		</shape>
	</item>
</selector>
