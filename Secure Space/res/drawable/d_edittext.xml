<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android"
	>
	<item
		android:state_selected="true"
		>
		<shape>
			<stroke
				android:width="4dp"
				android:color="#FF0000"
				/>
			<solid
				android:color="#ffff22"
				/>
		
			<corners
				android:radius="5dp"
				/>
		</shape>
	</item>
	<item
		android:state_pressed="true"
		>
		<shape>
			<stroke
				android:width="2dp"
				android:color="#FF0000"
				/>
			<solid
				android:color="#ffff22"
				/>
		
			<corners
				android:radius="5dp"
				/>
		</shape>
	</item>
	<item
		android:state_focused="true"
		>
		<shape>
			<stroke
				android:width="2dp"
				android:color="#FF0000"
				/>
			<solid
				android:color="#ffffaa"
				/>
		
			<corners
				android:radius="5dp"
				/>
		</shape>
	</item>
	<item>
		<shape>
			<stroke
				android:width="2dp"
				android:color="#000000"
				/>
			<solid
				android:color="#ffffaa"
				/>
		
			<corners
				android:radius="5dp"
				/>
		</shape>
	</item>
</selector>

