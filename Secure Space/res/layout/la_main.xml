<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/M_mainMain"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_margin="0.0px"
	android:paddingTop="5.0dp"
	>
	<ScrollView
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:fadeScrollbars="false"
		android:layout_alignParentTop="true"
		android:layout_above="@+id/M_bottomButtons_th"
		>
	<LinearLayout
			android:id="@+id/M_mainTable"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			>
			<LinearLayout
				android:id="@+id/M_containerA"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
			/>
			<LinearLayout
				android:id="@+id/M_containerB"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
			/>
					

		</LinearLayout>
	</ScrollView>
	
	<LinearLayout
		android:id="@+id/M_bottomButtons_th"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:gravity="center_vertical"
		android:layout_above="@+id/M_bottomButtons"
		>
		<Button
			android:text="Service Settings"
			android:layout_height="wrap_content"
			android:id="@+id/bSettings_th"
			android:layout_width="fill_parent"
			android:layout_weight="1.0"
			style="@style/Button_A"
			android:ellipsize="end"
			></Button>
		<Button
			android:text="Test"
			android:layout_height="wrap_content"
			android:id="@+id/bTest_th"
			android:layout_width="fill_parent"
			android:layout_weight="1.0"
			style="@style/Button_A"
			android:ellipsize="end"
			></Button>
		<Button
			android:text="Select Files"
			android:layout_height="wrap_content"
			android:id="@+id/bSelectfiles_th"
			android:layout_width="fill_parent"
			android:layout_weight="1.0"
			style="@style/Button_A"
			android:ellipsize="end"
			></Button>

	</LinearLayout>
	
	<LinearLayout
		android:id="@+id/M_bottomButtons"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:gravity="center_vertical"
		android:layout_alignParentBottom="true"
		>
		<Button
			android:text="@string/main_settingsButton"
			android:layout_height="wrap_content"
			android:id="@+id/M_settingsButton"
			android:layout_width="fill_parent"
			android:layout_weight="1.0"
			style="@style/Button_A"
			android:ellipsize="end"
			></Button>
		<Button
			android:text="@string/main_helpButton"
			android:layout_height="wrap_content"
			android:id="@+id/M_helpButton"
			android:layout_width="fill_parent"
			android:layout_weight="1.0"
			style="@style/Button_A"
			android:ellipsize="end"
			></Button>
		<Button
			android:text="@string/main_exitButton"
			android:layout_height="wrap_content"
			android:id="@+id/M_exitButton"
			android:layout_width="fill_parent"
			android:layout_weight="1.0"
			style="@style/Button_A"
			android:ellipsize="end"
			></Button>
	</LinearLayout>
</RelativeLayout>
