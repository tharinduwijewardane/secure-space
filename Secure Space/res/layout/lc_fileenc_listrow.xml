<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/FE_RowLayout"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/d_filerow"
	>
	<ImageView
		android:layout_width="wrap_content"
		android:id="@+id/FE_fileIcon"
		android:src="@drawable/icon"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_weight="1.0"
		android:layout_gravity="center_vertical|left"
		android:layout_centerInParent="true"
		android:paddingLeft="4dp"
		></ImageView>
	<ImageView
		android:id="@+id/FE_selectedIcon"
		android:src="@drawable/icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1.0"
		android:paddingRight="6dp"
		android:layout_alignParentRight="true"
		android:layout_centerInParent="true"
		android:layout_gravity="center_vertical|right"
		></ImageView>
	<TextView
		android:id="@+id/FE_fileName"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_toRightOf="@id/FE_fileIcon"
		android:layout_toLeftOf="@id/FE_selectedIcon"
		android:text="TextView"
		android:textStyle="bold"
		android:singleLine="true"
		android:layout_gravity="top"
		android:layout_weight="1.0"
		android:paddingLeft="10dp"
		android:paddingTop="6dp"
		android:paddingBottom="0px"
		></TextView>
	<RelativeLayout
		android:id="@+id/FE_bottomLinear"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/FE_fileIcon"
		android:layout_toLeftOf="@id/FE_selectedIcon"
		android:layout_below="@id/FE_fileName"
		android:gravity="bottom"
		android:layout_weight="1.0"
		android:paddingLeft="10dp"
		android:paddingTop="0dp"
		android:paddingBottom="6dp"
		android:paddingRight="8dp"
		>
		<TextView
			android:id="@+id/FE_fileSize"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="TextView"
			android:singleLine="true"
			android:layout_alignParentLeft="true"
			></TextView>
		<TextView
			android:id="@+id/FE_fileDate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:text="TextView2"
			android:singleLine="true"
			></TextView>
	</RelativeLayout>
</RelativeLayout>
